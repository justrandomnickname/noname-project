{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "webworker",
      "dom",
      "dom.iterable",
      "esnext",
      "scripthost"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@Core/Data": ["libs/Data"],
      "@Core/Math": ["libs/Math"],
      "@Game/*": ["Modules/Game/*"],
      "@UI/*": ["Modules/UI/*"],
      "@Core/UI": ["Modules/UI/index"],
      "@Map/*": ["Modules/Map/*"],
      "@Controls/*": ["Modules/Controls/*"],
      "@Loader/*": ["Modules/Loader/*"],
      "@Controllers/*": ["Controllers/*"]
    }
  },
  "include": [
    "src"
  ],
}
